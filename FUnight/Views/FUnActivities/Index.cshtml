@model IEnumerable<FUnight.Models.FUnActivity>

@{
    ViewData["Title"] = "Your Suggestions";
}

    <h1>Your Suggestions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SuggestedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostEstimate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ActivityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActyTypeComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SuggestedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostEstimate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ActivityType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActyTypeComment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserGroup.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
